<p id="notice"><%= notice %></p>

<p>
  <strong>Type:</strong>
  <%= @vagon.vtype%>
</p>

<% unless @vagon.train.present? %>
  <p>Train unselected</p>
<% else %>
  <ul>
    <li><%= @vagon.train.number %></li>
  </ul>
<% end %>

<% if @vagon.places.empty? %>
  <p>Vagon list empty</p>
<% else %>
  <ul>
    <li><%= @vagon.places.count%></li>
  </ul>
<% end %>

<%= link_to 'Edit', edit_vagon_path(@vagon) %> 
<%= link_to 'Back', vagons_path %>
