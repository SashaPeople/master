<!DOCTYPE html>
<html>
  <head>
    <title>Rzhd-admin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to 'RZHD', welcome_index_path %> 

    <p id="notice" class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you shure?' } %>
      <p>Account: <%= current_user.email %></p>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path %> 
    <% end %>

    <%= yield %>
    <footer>(c)2017 Gavrilov Alexandr</footer>
  </body>

</html>
